<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/search_Mlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_6xl"
      android:background="@color/colorAccent"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/key_word_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_4xl"
            android:layout_weight="7"
            android:layout_marginStart="@dimen/dim_xl"
            android:layout_marginBottom="@dimen/dim_xl"
            android:layout_marginTop="@dimen/dim_xl"
            android:background="@drawable/bg_of_row"
            android:hint="@string/search_hint"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

        <ImageButton
            android:id="@+id/searchMedication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim_xl"
            android:layout_marginEnd="@dimen/dim_xl"
            android:layout_marginBottom="@dimen/dim_xl"
            android:layout_weight="2"
            android:background="@color/white"
            android:clickable="true"
            android:src="@drawable/ic_search_black_24dp" />
    </LinearLayout>
</RelativeLayout>